<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElevatorActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/a" />

        <Button
            android:id="@+id/door_01"
            android:layout_width="77dp"
            android:layout_height="92dp"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/door01"
            tools:visibility="visible" />

        <Button
            android:id="@+id/door_02"
            android:layout_width="76dp"
            android:layout_height="88dp"
            android:layout_gravity="start"
            android:layout_marginStart="269dp"
            android:layout_marginTop="306.5dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/door02"
            tools:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="700dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/b" />

        <Button
            android:id="@+id/door_03"
            android:layout_width="66dp"
            android:layout_height="82dp"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="1003dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/door03"
            tools:visibility="visible" />

        <Button
            android:id="@+id/door_04"
            android:layout_width="37dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:layout_marginStart="380dp"
            android:layout_marginTop="1018dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/door04"
            tools:visibility="visible" />
    </RelativeLayout>
</ScrollView>