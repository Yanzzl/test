<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >

            <TextView
                android:id="@+id/textTitle_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Title:"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/title_u"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorAccent"
                android:inputType="text"
                android:selectAllOnFocus="true"
                 />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"

            >
            <TextView
                android:id="@+id/textLatitude_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Latitude:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/latitude_u"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorAccent"
                android:inputType="text"
                android:selectAllOnFocus="true"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:id="@+id/textLongitude_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Longitude:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/longitude_u"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"

                android:backgroundTint="@color/colorAccent"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textDescription_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/description_u"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:scrollbars="vertical"
                android:gravity="top|left"
                android:paddingStart="5dp"
                android:background="@drawable/bg_edittext_box"
                android:backgroundTint="@color/colorAccent"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            >
            <TextView
                android:id="@+id/textPicture_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Picture:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/picture_u"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginStart="22dp"
                android:src="@drawable/ic_add"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/picture_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:textSize="15dp"
                />

<!--            <ListView-->
<!--                android:id="@+id/picList_u"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent" />-->

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="10dp"
            android:id="@+id/picList_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:adjustViewBounds="true"
            android:clipToPadding="false"
            android:scaleType="fitXY"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >

            <TextView
                android:id="@+id/textAr_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="AR:"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/ar_u"
                app:layout_constraintTop_toBottomOf="@+id/textPicture_u" />

            <ImageView
                android:id="@+id/ar_u"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginStart="70.2dp"
                android:src="@drawable/ic_add"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture_u" />

            <TextView
                android:id="@+id/ar_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/ar_u"
                app:layout_constraintTop_toBottomOf="@+id/picList_u" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            >

            <TextView
                android:id="@+id/textGame_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Game:"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/game_u"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginStart="42.1dp"


                android:src="@drawable/ic_add"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/game_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:textSize="15dp"
                />

        </LinearLayout>




        <Button
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"

            android:id="@+id/upload_u"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/loginbutton_selector"

            android:padding="3dp"
            android:text="upload"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>